  <script type="text/javascript">
    //Change active tab
    window.onload = function () {
      console.log("ran the function with pathname: " + location.pathname);
      if (location.pathname == '/'){
        console.log("making home active");
        $('#HomeTab').toggleClass('active');
        if ($('#AddTab').hasClass('active')){
          $('#AddTab').toggleClass('active');
        }
      } else if (location.pathname == '/users/add'){
        console.log("making add active");
        $('#AddTab').toggleClass('active');
        if ($('#HomeTab').hasClass('active')){
          $('#HomeTab').toggleClass('active');
        }
      }
    };
  </script>
